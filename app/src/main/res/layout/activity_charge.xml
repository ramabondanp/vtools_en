<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_app_bar"
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.omarea.common.ui.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout style="@style/ListCardItem">

                <TextView
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="function introduction" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="This interface shows the change process of power, temperature, and charging speed when you last charged." />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="You need to keep this application running while charging to get data" />
            </LinearLayout>

            <TextView
                android:id="@+id/charge_state"
                style="@style/ListCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/ListCardItem"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <TextView
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="battery current/power" />

                <com.omarea.ui.charge.ChargeCurveView
                    android:id="@+id/view_speed"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <TextView
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="battery/time" />

                <com.omarea.ui.charge.ChargeTimeView
                    android:id="@+id/view_time"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <TextView
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature/Power" />

                <com.omarea.ui.charge.ChargeTempView
                    android:id="@+id/view_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem"
                android:paddingEnd="0dp">

                <TextView
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to use" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="① Start this application" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="② Connect the charger" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="③ Turn off the screen until charging is complete" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="④ View curve" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="You need to keep this application running in the background to get statistics!" />

            </LinearLayout>

            <TextView
                android:id="@+id/electricity_adj_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Current unit calibration"
                android:textColor="?android:colorAccent"
                android:textSize="12sp" />

        </LinearLayout>
    </com.omarea.common.ui.OverScrollView>
</RelativeLayout>